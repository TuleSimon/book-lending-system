<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookLendingSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Status bar color. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <item name="android:statusBarColor" >?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.BookLendingSystem2" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Status bar color. -->
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
        <item name="android:statusBarColor" >?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="normalText">
        <item name="fontFamily">@font/louis_george</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="bigText">
        <item name="fontFamily">@font/calling_code</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="iconButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="elevation">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textAlignment">gravity</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="iconGravity">start</item>
        <item name="iconSize">22dp</item>
        <item name="iconTint">?colorPrimary</item>
    </style>

    <style name="biggerText" parent="Theme.BookLendingSystem">
        <item name="fontFamily">@font/calling_code</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="splashscreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:statusBarColor" >?colorPrimaryVariant</item>
    </style>
</resources>